<config>
    <modules>
        <Adyen_Payment>
            <version>2.0.2</version>
        </Adyen_Payment>
    </modules>
    <global>
        <models>
            <adyen>
                <class>Adyen_Payment_Model</class>
                <resourceModel>adyen_mysql4</resourceModel>
            </adyen>
            <adyen_mysql4>
                <class>Adyen_Payment_Model_Mysql4</class>
                <entities>
                    <api_debug>
                        <table>adyen_api_debug</table>
                    </api_debug>
                    <event>
                        <table>adyen_event_data</table>
                    </event>
                </entities>
            </adyen_mysql4>
        </models>
        <helpers>
            <adyen>
                <class>Adyen_Payment_Helper</class>
            </adyen>
        </helpers>
        <resources>
            <adyen_setup>
                <setup>
                    <module>Adyen_Payment</module>
                    <class>Adyen_Payment_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </adyen_setup>
            <adyen_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </adyen_write>
            <adyen_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </adyen_read>
        </resources>
        <blocks>
            <adyen>
                <class>Adyen_Payment_Block</class>
            </adyen>
        </blocks>
        <payment>
            <groups>
                <adyen>Adyen</adyen>
            </groups>
        </payment>        
    </global>
    
    <frontend>
        <secure_url>
            <adyen_process>/adyen/process</adyen_process>
        </secure_url>
        <routers>
            <adyen>
                <use>standard</use>
                <args>
                    <module>Adyen_Payment</module>
                    <frontName>adyen</frontName>
                </args>
            </adyen>
        </routers>
        <translate>
            <modules>
                <Adyen_Payment>
                    <files>
                        <default>Adyen_Payment.csv</default>
                    </files>
                </Adyen_Payment>
            </modules>
        </translate>
        <layout>
            <updates>
                <adyen>
                    <file>adyen.xml</file>
                </adyen>
            </updates>
        </layout>
    </frontend>
    
    <adminhtml>
        <layout>
            <updates>
                <adyen>
                    <file>adyen.xml</file>
                </adyen>
            </updates>
        </layout>
        <translate>
            <modules>
                <Adyen_Payment>
                    <files>
                        <default>Adyen_Payment.csv</default>
                    </files>
                </Adyen_Payment>
            </modules>
        </translate>
        <events>
            <sales_order_invoice_pay>
                <observers>
                    <adyen_manual_online_capture>
                        <class>adyen/observer</class>
                        <method>capture</method>
                    </adyen_manual_online_capture>
                </observers>
            </sales_order_invoice_pay>
            <sales_order_creditmemo_refund>
                <observers>
                    <adyen_online_refund>
                        <class>adyen/observer</class>
                        <method>refund</method>
                    </adyen_online_refund>
                </observers>
            </sales_order_creditmemo_refund>                      
        </events>
    </adminhtml>
